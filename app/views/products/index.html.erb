<h1><%= link_to "Listing products", products_path %></h1>

<table id="product" class="display">
 <thead> 
  <tr>
    <% Product.attribute_names.each do |name| %>
    <th><%= name %></th>
    <% end  %>
    <th>Manufactures</th>
    <th>revision</th>
  </tr>
  </thead>
 <tbody>
<% @products.each do |product| %>
  <tr>
    <% Product.attribute_names.each do |name| %>
    <td><%= best_in_place product, name %></td>
    <% end  %>
    <td></td>
    <td><%= product.versions.length  %></td>
  </tr>
<% end %>
 </tbody>
</table>

